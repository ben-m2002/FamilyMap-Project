<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/login_fragment"
    tools:context=".Login_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools = "http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:stretchColumns="2"
            tools:context = ".MainActivity">

            <TableRow android:paddingBottom="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width = "wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/login_server"/>

                <EditText
                    android:id = "@+id/server_field"
                    android:layout_width = "wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:text="10.0.0.2"
                    tools:text="0:0:0:0"
                    />

            </TableRow>

            <TableRow android:paddingBottom="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/login_port"/>

                <EditText
                    android:id = "@+id/server_port_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:text="8080"
                    tools:text = "8080"/>
            </TableRow>

            <TableRow android:paddingBottom="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/user_name"
                    />
                <EditText
                    android:id = "@+id/server_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:inputType="text"
                    android:text="admin"/>
            </TableRow>

            <TableRow android:paddingBottom="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/password"/>
                <EditText
                    android:id="@+id/sever_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:inputType="text"
                    android:text="password"/>
            </TableRow>

            <TableRow android:paddingBottom="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/first_name"/>
                <EditText
                    android:id="@+id/server_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:inputType="text"/>
            </TableRow>

            <TableRow android:paddingBottom="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/last_name"/>
                <EditText
                    android:id="@+id/server_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:inputType="text"/>
            </TableRow>

            <TableRow android:paddingBottom="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/email"/>
                <EditText
                    android:id="@+id/server_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:inputType="text"
                    />
            </TableRow>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingTop="15dp"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/gender"
                    android:textSize="15dp"
                    android:paddingTop="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp">


                    <RadioButton
                        android:id="@+id/male_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/male"
                        android:textSize="17dp"
                        android:layout_marginLeft="-12dp"/>

                    <RadioButton
                        android:id="@+id/female_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/female"
                        android:textSize="17dp"
                        android:layout_marginLeft="-12dp"/>



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="46dp">

                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/register"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightblue"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/black"
                    android:text="Register"/>


                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/login"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightgreen"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:text="Login"/>


            </LinearLayout>

        </TableLayout>



    </ScrollView>


</FrameLayout>