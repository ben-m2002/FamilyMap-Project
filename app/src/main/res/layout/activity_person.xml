<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonActivity">

    <TextView
        android:id="@+id/person_activity_fn_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/person_activity_first_name_placeholder"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/person_activity_fn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/person_activity_first_name"
        android:textSize="18dp"
        android:layout_below="@id/person_activity_fn_placeholder"/>

    <TextView
        android:id="@+id/person_activity_ln_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/person_activity_last_name_placeholder"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@id/person_activity_fn"/>

    <TextView
        android:id="@+id/person_activity_ln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/person_activity_last_name"
        android:textSize="18dp"
        android:layout_below="@id/person_activity_ln_placeholder"/>

    <TextView
        android:id="@+id/person_activity_gend_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/person_activity_gender_placeholder"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@id/person_activity_ln"/>

    <TextView
        android:id="@+id/person_activity_gend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/person_activity_gender"
        android:textSize="18dp"
        android:layout_below="@id/person_activity_gend_placeholder"
        android:layout_marginBottom="10dp"/>

    <ExpandableListView
        android:id="@+id/person_expandable_list_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_activity_gend"
        android:layout_marginTop="13dp"
        android:divider="@color/gray"
        android:dividerHeight="0.5dp">



    </ExpandableListView>

</RelativeLayout>